<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8 text-gray-800">Поиск товара</h1>

  <div class="bg-gray-50 rounded-xl shadow-sm p-6 mb-8 border border-gray-100">
    <%= form_with url: search_products_path, method: :post, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="space-y-1">
          <%= label_tag :provider, "Магазин", class: "text-sm font-medium text-gray-700" %>
          <%= select_tag :provider, 
                options_for_select(@providers.map { |p| [t("providers.#{p}"), p] }), 
                include_blank: "Все магазины",
                class: "w-full rounded-lg border-gray-200 focus:border-blue-300 focus:ring-2 focus:ring-blue-200" %>
        </div>

        <div class="space-y-1">
          <%= label_tag :query, "Название товара", class: "text-sm font-medium text-gray-700" %>
          <%= text_field_tag :query, params[:query], 
                placeholder: "Введите название товара...",
                class: "w-full rounded-lg border-gray-200 focus:border-blue-300 focus:ring-2 focus:ring-blue-200" %>
        </div>
      </div>

      <%= submit_tag "Найти", 
            class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg transition-colors duration-200 shadow-sm w-full md:w-auto" %>
    <% end %>
  </div>

      <% if @search_results %>
        <h2 class="text-xl font-semibold mb-4 text-gray-700">Результаты поиска</h2>
        
        <div class="space-y-4">
            <div>HELLLLLOO</div>
          <% @search_results.each do |product| %>
            <%= link_to product_path(product), class: "block group" do %>
              <div class="p-4 hover:bg-gray-50 rounded-lg transition-colors border border-gray-100">
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="font-medium text-gray-800 group-hover:text-blue-600">
                      <%= product.name %>
                    </h3>
                    <p class="text-sm text-gray-500 mt-1">
                      <%= t("providers.#{product.provider_type}") %>
                    </p>
                  </div>
                  <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-6 text-gray-500">
          По вашему запросу ничего не найдено
        </div>
      <% end %>
</div>
