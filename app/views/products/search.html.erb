<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-4">
    <%= link_to "Мои отслеживаемые товары", product_sources_path, class: "text-blue-500 hover:underline" %>
  </div>
<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8 text-gray-800">Поиск товара</h1>

  <div class="bg-gray-50 rounded-xl shadow-sm p-6 mb-8 border border-gray-100">
    <%= form_with url: find_products_path, method: :post, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="space-y-1">
          <%= label_tag :provider, "Магазин", class: "text-sm font-medium text-gray-700" %>
          <%= select_tag :provider, 
                options_for_select(@providers.map { |p| [t("providers.#{p}"), p] }), 
                include_blank: "Выберите магазин",
                class: "w-full rounded-lg border-gray-200 focus:border-blue-300 focus:ring-2 focus:ring-blue-200" %>
        </div>

        <div class="space-y-1">
          <%= label_tag :query, "Название товара", class: "text-sm font-medium text-gray-700" %>
          <%= text_field_tag :query, nil, 
                placeholder: "Введите название товара...",
                class: "w-full rounded-lg border-gray-200 focus:border-blue-300 focus:ring-2 focus:ring-blue-200" %>
        </div>
      </div>

      <%= submit_tag "Найти", 
            class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg transition-colors duration-200 shadow-sm w-full md:w-auto" %>
    <% end %>
  </div>
</div>
