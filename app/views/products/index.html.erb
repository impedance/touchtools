<div class="max-w-6xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8 text-gray-800">Результаты поиска</h1>
  
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Магазин</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Название</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Действия</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @products.each do |product| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <span class="<%= provider_badge_color(product.provider_type) %> px-3 py-1 rounded-full text-sm">
                <%= t("providers.#{product.provider_type}") %>
              </span>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm text-gray-900 font-medium">
                <%= product.name.presence || "Товар без названия" %>
              </div>
              <div class="text-xs text-gray-500 truncate max-w-xs">
                <%= product.url %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "Подробнее", product_path(product), 
                    class: "text-blue-600 hover:text-blue-900 bg-blue-50 hover:bg-blue-100 px-4 py-2 rounded-lg transition-colors" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="mt-6">
    <%= link_to "← Вернуться к поиску", search_products_path, 
          class: "text-gray-500 hover:text-gray-600 text-sm" %>
  </div>
</div>
